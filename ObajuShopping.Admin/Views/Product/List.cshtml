
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $.ajax({
            url: "/Product/ProductList",
            method: 'post',
            dataType: 'json',
            success: function (data) {
                $("#product-list-table").DataTable({
                    data: data,
                    columns: [
                        { "data": "id", "autoWidth": true },
                        { "data": "photo", "autoWidth": true },
                        { "data": "name", "autoWidth": true },
                        { "data": "price", "autoWidth": true },
                        { "data": "description", "autoWidth": true },
                        { "data": "specials", "autoWidth": true },
                    ]
                })
            }
        })
    })
</script>

<form action="/" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left" style="/*float:left !important;*/">Products <small>some text</small></h1>
        <div class="pull-right" style="display:block;box-sizing:border-box;margin-top:15px;">
            <a href="@Url.Action("Create","Product")" class="btn bg-success"><i class="fa fa-plus-square"></i> Add New</a>
            <button type="button" class="btn bg-info">Download catalog as PDF</button>
            <button type="button" class="btn bg-info">Export</button>
            <button type="button" class="btn bg-success">Import</button>
            <button type="button" class="btn bg-danger"><i class="fa fa-trash-o"></i> Delete</button>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div id="products-grid person-list" class="k-gid">
                        <table id="product-list-table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Description</th>
                                    <th>Special</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
