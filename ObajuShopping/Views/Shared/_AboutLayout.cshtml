@{
    ViewBag.Title = "_AboutLayout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="col-md-12">
        <ul class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","AboutUs")">About Us</a>
            </li>
            <li>@ViewBag.ActionName</li>
        </ul>
    </div>

    <div class="col-md-3">

        <div class="panel panel-default sidebar-menu">

            <div class="panel-heading">
                <h3 class="panel-title">Pages</h3>
            </div>

            <div class="panel-body">
                <ul class="nav nav-pills nav-stacked">
                    <li>
                        <a href="@Url.Action("Index","AboutUs")">About Us</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact","AboutUs")">Contact</a>
                    </li>
                    <li>
                        <a href="@Url.Action("FAQ","AboutUs")">FAQ</a>
                    </li>
                </ul>
            </div>
        </div>


        <div class="banner">
            <a href="#">
                <img src="@Url.Content("~/Content/img/")banner.jpg" alt="sales 2014" class="img-responsive">
            </a>
        </div>
    </div>


    @RenderBody()


</div>
